<Application x:Class="SwissKnife.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SwissKnife"
             StartupUri="View/MainWindow.xaml">
    
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/VisualStyle/Colorize.xaml" />
                <ResourceDictionary Source="/VisualStyle/WindowStyle.xaml" />
                <ResourceDictionary Source="/VisualStyle/Fonts.xaml" />
                <ResourceDictionary Source="/VisualStyle/IceTheme.xaml" />
                <ResourceDictionary Source="/VisualStyle/CommonStyles.xaml" />

                <ResourceDictionary Source="/Languages/lang.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
